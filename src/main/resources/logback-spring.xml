<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="false">

    <springProperty scope="context" name="APP_NAME" source="spring.application.name" defaultValue="kube-monitor-probe-kit"/>

    <!-- Basit JSON Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>{"timestamp":"%d{"yyyy-MM-dd'T'HH:mm:ss.SSSXXX"}", "level":"%level", "service":"${APP_NAME}", "logger":"%logger{36}", "thread":"%thread", "traceId":"%X{traceId:-}", "spanId":"%X{spanId:-}", "message":"%message", "exception":"%ex"}%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>